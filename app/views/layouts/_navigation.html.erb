<div id="nav-bar">
  <div class="container-z">
    <div class="title-tab active">
      <div class="arrow-up">
        <div class="inner-triangle"></div>
      </div>
      <%= link_to 'Company Board', company_dashboard_path, remote: true %>
    </div>
    <div class="title-tab">
      <div class="arrow-up">
        <div class="inner-triangle"></div>
      </div>
      <%= link_to 'Your Dashboard', user_path(current_user), remote: true %>
    </div>
    <div class="title-tab">
      <div class="arrow-up">
        <div class="inner-triangle"></div>
      </div>
      <%= link_to pending_requests_user_path(current_user), remote: true do %>
        Pending Request <div class="notify"><%= current_user.pending_requests.where(:status => "Pending").count %></div>
      <% end %>
    </div>
    <div class="title-tab">
      <div class="arrow-up">
        <div class="inner-triangle"></div>
      </div>
      <%= link_to cc_requests_user_path(current_user), remote: true do %>
        CC'd Request <div class="notify"><%= current_user.cc_requests.where(:status => "Pending").count %></div>
      <% end %>
    </div>
    <div class="send-request">
      <%= link_to 'Send Request', new_request_path, remote: true %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.title-tab').on('click', function() {
    $('.title-tab').removeClass('active');
    $(this).addClass('active');
  });
</script>